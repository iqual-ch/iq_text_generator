{#
/**
 * @file
 * Theme override for a 'generated-text' #type form element.
 *
 * Available variables
 * - wrapper_attributes: A list of HTML attributes for the wrapper element.
 * - attributes: A list of HTML attributes for the generated-text element.
 * - resizable: An indicator for whether the generated-text is resizable.
 * - required: An indicator for whether the generated-text is required.
 * - value: The generated-text content.
 *
 * @see template_preprocess_generated-text()
 */
#}
{%
  set classes = [
    'form-textarea',
    'form-control',
    resizable ? 'resize-' ~ resizable,
    required ? 'required',
  ]
%}
<div class="generated-text-form-element">
  {{ element.value }}
  <div class="generated-text-button-holder">
    <button class="btn btn-generate generated-text-button">{{ 'Generate text'|t }}</button>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="iq-text-generator-confirmation-modal" tabindex="-1" role="dialog" aria-labelledby="iqTextGeneratorConfirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="iqTextGeneratorConfirmationModalLabel">Warning</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{ 'Existing text will be overwritten!' }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'Close'|t }}</button>
        <button type="button" class="btn btn-primary">{{ 'Continue'|t }}</button>
      </div>
    </div>
  </div>
</div>
